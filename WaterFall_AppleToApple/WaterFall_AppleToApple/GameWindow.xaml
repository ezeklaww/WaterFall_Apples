<Window x:Class="WaterFall_AppleToApple.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterFall_AppleToApple"
        mc:Ignorable="d"
        Title="GameWindow" Height="675" Width="1200">
    <Window.Background>
        <ImageBrush ImageSource="Resources/gameBkg.jpg" />
    </Window.Background>
    <Grid Margin="0" ClipToBounds="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Player Names Box -->
        <Grid Name="PlayerGrid" Margin="10,0,0,0" HorizontalAlignment="Left" Width="265" Height="120" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid x:Name="GridHand" Grid.ColumnSpan="2" Margin="320,500,0,0" Height="149" VerticalAlignment="Top" HorizontalAlignment="Left" Width="750">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid x:Name="Judge" Grid.ColumnSpan="2" Margin="0,0,74,0" Height="142" VerticalAlignment="Center" HorizontalAlignment="Right" Width="1076">
            <Grid.ColumnDefinitions>

            </Grid.ColumnDefinitions>
        </Grid>


        <Border BorderBrush="Black" BorderThickness="2" Margin="323,448,167,0" VerticalAlignment="Top" MouseLeftButtonDown="OnCardInHand" Height="130">
            <TextBlock Name="Card1"  Text="Card" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>




        <!--Shown Player Cards-->
        <Border BorderBrush="Black" BorderThickness="2" Margin="126,265,364,264">
            <TextBlock Text="Player Card" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Margin="394,264,0,264" HorizontalAlignment="Left" Width="110">
            <TextBlock Text="Player Card" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Margin="268,265,222,264">
            <TextBlock Text="Player Card" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Margin="97,165,215,165" Width="110" Height="130" Grid.Column="1">
            <TextBlock Text="PlayerCard" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Margin="223,165,89,165" Width="110" Height="130" Grid.Column="1">
            <TextBlock Text="Player Card" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!--Green deck-->
        <Image Source="Resources/greenAppleBack.png" Margin="344,0,0,465" Width="100" Height="150" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>

        <!--Red Deck-->
        <Image Source="Resources/redAppleBack.png" Margin="0,0,334,465" Width="100" Grid.Column="1" Height="150" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>

        <!--Prompt card-->
        <Border BorderBrush="Black" BorderThickness="2" Margin="550,0,550,465" Width="100" Height="150" Grid.ColumnSpan="2" VerticalAlignment="Bottom">
            <TextBlock Text="Prompt" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>


    </Grid>
</Window>
