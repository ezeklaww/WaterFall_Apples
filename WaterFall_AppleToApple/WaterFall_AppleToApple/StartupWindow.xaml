<Window x:Class="WaterFall_AppleToApple.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterFall_AppleToApple"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="Resources/startupBkg.jpg" />
    </Window.Background>
    <Grid>
        <Label Name="lblTtle" Content="Apples 2 Apples" FontSize="32" Margin="282,84,282,0" VerticalAlignment="Top"/>
        <Label Name="lblOutput" Content="How many players do you want?" HorizontalAlignment="Center" Margin="0,142,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbInput" Background="LightCyan" Width="76" Height="20" HorizontalAlignment="Left" Margin="324,197,0,0" VerticalAlignment="Top"/>
        <Button Name="btnSubmit" Background="CornflowerBlue" Content="Submit" HorizontalAlignment="Left" Margin="421,197,0,0" VerticalAlignment="Top" Click="OnClickSubmit"/>


    </Grid>
</Window>
